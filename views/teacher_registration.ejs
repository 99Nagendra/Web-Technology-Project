              <div class="row">
               <div class="column">
                 <div class="card" style="border-color:black;border-radius:20px;margin-bottom:1cm;">
                         
                   <h3><%=result[i].name%></h3>
                   <img class="card-img-top" src="https://thumbs.dreamstime.com/z/young-guy-studying-home-making-great-progress-attractive-student-working-his-digital-tablet-72846437.jpg" alt="Card image" style="width:100%">
                   <p><%=result[i].description%></p>
                   <p><%=result[i].teacherid%></p>
                 <p><%=i+1 %></p>
                   <button type="submit" name="videobutton" value=<%=i+1%>> GOTO </button>
                 </div>
               </div> 
             <% } %> 
             </form>


